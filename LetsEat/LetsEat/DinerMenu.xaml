<Page
    x:Class="LetsEat.DinerMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LetsEat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="dinerName" FontSize="34" />
        <Button x:Name="call" Content="Call" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,140,0" Click="call_Clicked"/>
        <Button x:Name="go" Content="Go" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="140,0,0,0"/>
    </Grid>
</Page>
