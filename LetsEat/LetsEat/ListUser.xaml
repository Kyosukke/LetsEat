<Page
    x:Class="LetsEat.ListUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LetsEat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="Lets eat">
            <PivotItem Header="ListUser" Margin="0,23,0,-0.667">
                <Grid Margin="-14,0,-19.333,-0.167">
                    <ListView x:Name="ListUser" Margin="10,0,22,0" DoubleTapped="ListUser_DoubleTapped">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="UserName" Text="{Binding Name}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem Header="History">
                <Grid/>
            </PivotItem>
        </Pivot>

    </Grid>
</Page>
