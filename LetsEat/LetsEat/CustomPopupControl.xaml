<UserControl
    x:Class="LetsEat.CustomPopupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LetsEat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="400">

    <Grid Width="400" Height="200" Background="DarkGray">
        <Viewbox>
            <TextBlock x:Name="popupText" x:FieldModifier="public" FontSize="24" Margin="0" VerticalAlignment="Center"/>
        </Viewbox>
        <TextBox x:Name="popupBox" Visibility="Collapsed" x:FieldModifier="public" VerticalAlignment="Bottom" Margin="0,0,0,60" HorizontalAlignment="Center"/>
        <Button x:Name="popupButton" Content="OK" x:FieldModifier="public" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
